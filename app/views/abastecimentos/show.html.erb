<%- model_class = Abastecimento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @abastecimento.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @abastecimento.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:litros) %>:</strong></dt>
  <dd><%= @abastecimento.litros %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              abastecimentos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_abastecimento_path(@abastecimento), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              abastecimento_path(@abastecimento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
