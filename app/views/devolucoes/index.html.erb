<%- model_class = Devolucao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:data) %></th>
      <th><%= model_class.human_attribute_name(:combustivel) %></th>
      <th><%= model_class.human_attribute_name(:quilometragem) %></th>
      <th><%= model_class.human_attribute_name(:entregou_notas) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @devolucoes.each do |devolucao| %>
      <tr>
        <td><%= link_to devolucao.id, devolucao_path(devolucao) %></td>
        <td><%= devolucao.data %></td>
        <td><%= devolucao.combustivel %></td>
        <td><%= devolucao.quilometragem %></td>
        <td><%= devolucao.entregou_notas %></td>
        <td><%=l devolucao.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      devolucao_path(devolucao), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_devolucao_path(devolucao), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      devolucao_path(devolucao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_devolucao_path,
            :class => 'btn btn-primary' %>
