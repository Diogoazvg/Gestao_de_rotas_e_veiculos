<%- model_class = Devolucao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @devolucao.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nivel_combustivel) %>:</strong></dt>
  <dd><%= @devolucao.nivel_combustivel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quilometragem) %>:</strong></dt>
  <dd><%= @devolucao.quilometragem %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entregou_notas) %>:</strong></dt>
  <dd><%= @devolucao.entregou_notas %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              devolucoes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_devolucao_path(@devolucao), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              devolucao_path(@devolucao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
