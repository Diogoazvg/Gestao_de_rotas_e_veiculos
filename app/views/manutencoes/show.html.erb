<%- model_class = Manutencao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:data) %>:</strong></dt>
  <dd><%= @manutencao.data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:valor) %>:</strong></dt>
  <dd><%= @manutencao.valor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detalhes) %>:</strong></dt>
  <dd><%= @manutencao.detalhes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:previsao) %>:</strong></dt>
  <dd><%= @manutencao.previsao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:veiculo_id) %>:</strong></dt>
  <dd><%= @manutencao.veiculo_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              veiculo_manutencoes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_veiculo_manutencao_path(@veiculo, @manutencao), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              veiculo_manutencao_path(@veiculo, @manutencao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
