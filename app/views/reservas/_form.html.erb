<%= simple_form_for @reserva, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :data_inicial %>
  <%= error_span(@reserva[:data_inicial]) %>
  <%= f.input :quilometragem_inicial %>
  <%= error_span(@reserva[:quilometragem_inicial]) %>
  <%= f.input :nivel_tanque %>
  <%= error_span(@reserva[:nivel_tanque]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservas_path, :class => 'btn btn-default' %>
<% end %>
