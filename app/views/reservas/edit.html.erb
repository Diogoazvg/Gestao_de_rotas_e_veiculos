<%= simple_form_for @reserva, url: reserva_path(@reserva) do |f| %>
      <%= f.error_notification %>
  <%= f.hidden_field :data_inicial, value: DateTime.now.to_date %>
  <%= f.input :quilometragem_inicial, name: "Quilometragem Final" %>
  <%= f.input :nivel_tanque, collection: %w(Reserva Abaixo\ de\ meio\ tanque\ Meio\ tanque Acima\ de\ meio\ tanque Completo) %>
  <%= f.hidden_field :usuario_id, value: current_usuario.id %>
  <!--%= f.hidden_field :veiculo_id, value: @veiculo.id %-->
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservas_path, :class => 'btn btn-default' %>

  <% end %>
