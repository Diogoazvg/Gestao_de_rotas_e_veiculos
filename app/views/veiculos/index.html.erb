<%- model_class = Veiculo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:marca) %></th>
      <th><%= model_class.human_attribute_name(:modelo) %></th>
      <th><%= model_class.human_attribute_name(:ano) %></th>
      <th><%= model_class.human_attribute_name(:placa) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:cnh) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:quilometragem) %></th>
      <th><%= model_class.human_attribute_name(:combustivel) %></th>
      <th><%= model_class.human_attribute_name(:combustivel) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>  
  <% if current_usuario.reserva.veiculo.status == 'IndisponÃ­vel' %> 
      <tr>
        <td><%= link_to current_usuario.reserva.veiculo.id %></td>
        <td><%= current_usuario.reserva.veiculo.marca %></td>
        <td><%= current_usuario.reserva.veiculo.modelo %></td>
        <td><%= current_usuario.reserva.veiculo.ano %></td>
        <td><%= current_usuario.reserva.veiculo.placa %></td>
        <td><%= current_usuario.reserva.veiculo.tipo %></td>
        <td><%= current_usuario.reserva.veiculo.categoria_cnh %></td>
        <td><%= current_usuario.reserva.veiculo.status %></td>
        <td><%= current_usuario.reserva.veiculo.quilometragem %></td>
        <td><%= current_usuario.reserva.veiculo.combustivel %></td>
        <td><%= current_usuario.reserva.veiculo.combustivel2 %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      veiculo_path(current_usuario.reserva.veiculo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_veiculo_path(current_usuario.reserva.veiculo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.devolver'), new_veiculo_reserva_devolucao_path(current_usuario.reserva.veiculo, current_usuario.reserva), :class => 'btn btn-default btn-xs' %>
                      
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      veiculo_path(current_usuario.reserva.veiculo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
   <%end%>   
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_veiculo_path,
            :class => 'btn btn-primary' %>







    